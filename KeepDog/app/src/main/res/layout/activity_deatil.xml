        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="牧羊犬"></TextView>
    <TextView
        android:id="@+id/tvContentDeatils"
        android:scrollbars="vertical"
        android:paddingHorizontal="10dp"
